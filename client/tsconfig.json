{
    "compilerOptions": {
        "target": "es2016",
        "module": "none",
        "moduleResolution": "node",
        "rootDir": "../",
        "outDir": "../dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "../shared/**/*"
    ]
}
